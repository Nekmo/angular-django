# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,yaml,ts}]
indent_size = 2
quote_type = single

[*.py]
line_length=120
known_first_party=customer_panel
multi_line_output=3
default_section=THIRDPARTY

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
